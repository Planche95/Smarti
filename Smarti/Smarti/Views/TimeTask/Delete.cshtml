@model TimeTaskDeleteViewModel

@{
    ViewData["Title"] = "Delete time task";

    string iconColor;
    string timeTaskType;

    if (Model.Action)
    {
        iconColor = "text-success";
        timeTaskType = "on";
    }
    else
    {
        iconColor = "text-danger";
        timeTaskType = "off";
    }
}

<h2>Are you sure you want to delete this from <strong>@ViewData["SocketName"]</strong> in <strong>@ViewData["RoomName"]</strong>?</h2>
<hr />
<div class="col-sm-12 col-lg-12 col-md-12">
    <div class="thumbnail">
        <div class="caption">
            <div class="col">
                <h4>
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x @iconColor"></i>
                        <i class="fa fa-power-off fa-stack-1x fa-inverse"></i>
                    </span>
                    <strong>Turn @timeTaskType</strong> the socket at <strong>@Model.TimeStamp.TimeOfDay</strong> on <strong>@Model.TimeStamp.ToShortDateString()</strong>
                </h4>
            </div>
        </div>
    </div>
</div>


<form asp-action="Delete">
    <input type="hidden" asp-for="TimeTaskId" />
    <input type="hidden" asp-for="SocketId" />
    <input type="hidden" asp-for="BackgroundJobId" />
    <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash-o"></i> Delete
    </button>
    <a asp-route="TimeTask" asp-route-id="@Model.SocketId" class="btn btn-primary"><i class="fa fa-undo"></i> Back</a>
</form>

